<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".package_controller.FinishActivity">
    <!--tools show you a preview of the changes but does not apply it to actual xmlns:app="http://schemas.android.com/apk/res-auto"-->
    <ImageView
            android:src="@drawable/exercisebg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"
            android:contentDescription="@string/finishbackground"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/searchLeaguesText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="@+id/imageView5"
            android:layout_marginEnd="16dp"
            tools:text="Looking for a co-ed beginner league near you..."
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textAlignment="center" android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="0.45"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/progressBar" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/searchLeaguesText"/>
</android.support.constraint.ConstraintLayout>